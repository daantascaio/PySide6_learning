    // Python Settings
    "[python]": {
      "editor.defaultFormatter": "ms-python.autopep8", // Set the default code formatter for Python.
      "editor.tabSize": 4, // Set the tab size to 4 spaces.
      "editor.insertSpaces": true, // Insert spaces instead of tabs for indentation.
      "editor.formatOnSave": true, // Format code automatically on save.
      "editor.codeActionsOnSave": {
        "source.fixAll": true, // Automatically fix all code issues on save.
        "source.fixAll.unusedImports": true, // Remove unused imports on save.
        "source.organizeImports": true // Organize imports on save.
      },
      "python.languageServer": "Pylance", // Use the Pylance language server for Python.
      "python.formatting.autopep8Args": [
        "--indent-size=4",
        "--max-line-length=80"
      ],
      "python.linting.flake8Args": [], // No specific arguments for Flake8 linting.
      "python.linting.flake8Enabled": true, // Enable Flake8 linting.
      "python.linting.mypyEnabled": true, // Enable Mypy static type checking.
      "python.testing.unittestEnabled": false, // Disable unittest testing.
      "python.testing.pytestEnabled": true, // Enable pytest testing.
      "python.analysis.diagnosticSeverityOverrides": {
        "reportUnknownMemberType": "none",
        "reportUnknownArgumentType": "none",
        "reportUnknownVariableType": "none",
        "reportUnknownLambdaType": "none",
        "reportUnknownParameterType": "none"
      },
      "python.analysis.typeCheckingMode": "basic" // Set type checking mode to basic.
    },
  
    // Other Settings
    "cSpell.enabled": true,
    "python.formatting.provider": "none" // Enable spell checking.
  }
  